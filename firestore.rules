rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite apenas a leitura se o usuário estiver autenticado
    match /{document=**} {
      allow read: if request.auth != null;
    }
    
    // Permite a gravação somente se o usuário estiver autenticado
    match /{document=**} {
      allow write: if request.auth != null;
    }
  }
}
